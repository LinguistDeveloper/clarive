#!/bin/bash

echo 'Installing dependencies...'

bin/cla exec stew install --base /opt/clarive --repo http://sources.clarive.com git 'perl-modules-master'

while getopts "t" arg; do
  case $arg in
    t)
      echo "Installing smoke tests"

      bin/cla exec stew install --base /opt/clarive --repo http://sources.clarive.com nightwatch
      ;;
  esac
done
