#!/bin/sh
cd $BASELINER_HOME

#export LIBPATH=$BASELINER_LIBPATH:$LIBPATH

#if [ "$BASELINER_NLS_LANG" != "" ]; then
#	export NLS_LANG=$BASELINER_NLS_LANG
#fi

#if [ "$BASELINER_SCRIPT" == "" ]; then
#	export BASELINER_SCRIPT=script/bali.pl
#fi

#if [ "$BASELINER_LANG" != "" ]; then
#	export LANG=$BASELINER_LANG
#fi

export NLS_LANG=SPANISH_SPAIN.UTF8

# -X : no warnings for production environments
service=$2
if [ "$1" == "stop" ];
then
	    echo "balid: stopping service $service..."
        ps uwwx|grep perl|grep "bali.pl"|grep "$service"|grep -v grep|awk '{ print $2 }'|xargs kill
        echo "balid: killed ok."
        exit 0
fi
exec nohup perl -X script/bali.pl $* >$BASELINER_LOGHOME/balid.log 2>&1 &

