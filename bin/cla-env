#!/bin/bash

#set -x

BINDIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
LOCALDIR="$BINDIR/../../local"
PERL="$LOCALDIR/perl/bin/perl"
if [ ! -e $PERL ]; then
    PERL=`which perl`
fi
export PATH="$LOCALDIR/bin:$LOCALDIR/sbin:$PATH"
export LD_LIBRARY_PATH="$LOCALDIR/lib"

if [ "$1" == "exec" ]; then
    shift

    if [ "$1" == "nginx" ]; then
        cd $LOCALDIR/sbin
    fi

    "$@"
else
    $PERL $BINDIR/cla "$@"
fi
